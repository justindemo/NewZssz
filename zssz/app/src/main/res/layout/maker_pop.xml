<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popupmap"
    android:padding="8dp">


    <LinearLayout
        android:id="@+id/ll_pop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/marker_reporter_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/my_icon" />

        <TextView
            android:id="@+id/report_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张何阳"
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_statu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="审核中"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pop_mid"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pop_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_deal_icon1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_deal_icon2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="6dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_deal_icon3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="6dp"
            android:scaleType="fitXY" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pop_mid"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/bt_mark_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bt_mark_detail"
            android:text="@string/review_tv_detail"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_navi"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bt_navi"
            android:text="@string/deal_navi"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>


</RelativeLayout>