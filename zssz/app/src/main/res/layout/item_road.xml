<?xml version="1.0" encoding="utf-8"?>
<com.xytsz.xytsz.ui.Swipelayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_marginTop="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pass1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#9e9e9e"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="养护一段"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_pass2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#9e9e9e"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="养护二段"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#f00"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="驳回"
            android:textSize="19sp"
            android:textColor="#fff" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_road"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >

        <ImageView
            android:id="@+id/iv_swipe_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:id="@+id/tv_detail"
            android:text="详细"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/cc_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_problem_reporter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_swipe_icon"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="上报人:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_problem_reporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_problem_reporter_title"
            android:ellipsize="end"
            android:text="张王丽"
            android:textSize="18sp" />



        <TextView
            android:id="@+id/tv_problem_loca_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_problem_reporter_title"
            android:ellipsize="end"
            android:layout_toRightOf="@id/iv_swipe_icon"
            android:text="病害位置:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_problem_loca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_problem_reporter_title"
            android:layout_toRightOf="@+id/tv_problem_loca_title"
            android:ellipsize="end"
            android:text="位置描述"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_problem_reportertime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_problem_loca"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="上报时间:"
            android:layout_toRightOf="@id/iv_swipe_icon"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_problem_reportertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_problem_loca"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_problem_reportertime_title"
            android:ellipsize="end"
            android:text="2017/3/2 15:02"
            android:textSize="18sp" />




    </RelativeLayout>
</com.xytsz.xytsz.ui.Swipelayout>