<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenbackground1"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.baidu.mapapi.map.TextureMapView

            android:id="@+id/home_mv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_height" />

        <com.dalong.marqueeview.MarqueeView
            android:id="@+id/tv_marquee"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="#55000000"
            app:direction="left"
            app:isRepeat="true"
            app:speed="50"
            app:startPoint="end"
            app:textSize="16sp"
            app:textcolor="@color/cc_white" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >

        <!--第一行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_home_report"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_report" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:text="@string/reprote" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:background="@drawable/tv_shape"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="23"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_home_deal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_deal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_deal" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:text="@string/deal" />

                    <TextView
                        android:id="@+id/tv_home_deal_number"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="top|right"
                        android:background="@drawable/tv_shape"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_home_uncheck"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_post" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:text="@string/post" />

                    <TextView
                        android:id="@+id/tv_home_unchecek_number"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="top|right"
                        android:background="@drawable/tv_shape"
                        android:gravity="center"
                        android:text="23"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <!--第二行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_home_review"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_review" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:text="@string/review" />

                    <TextView
                        android:id="@+id/tv_home_review_number"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="top|right"
                        android:background="@drawable/tv_shape"
                        android:gravity="center"
                        android:text="23"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_send"

                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_send" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:text="@string/send" />

                    <TextView
                        android:id="@+id/tv_home_send_number"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="top|right"
                        android:background="@drawable/tv_shape"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_check"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_check" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:text="@string/check" />

                    <TextView
                        android:id="@+id/tv_home_check_number"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="top|right"
                        android:background="@drawable/tv_shape"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="invisible" />

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

