<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_contact_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_above="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_exit"
            android:focusable="false"
            android:focusableInTouchMode="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="市政名称："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_cityname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="北京市市政协会"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_exit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="协会负责人："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_citychargeperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="张祥龙"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_exit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="协会位置："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_city_loca"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cc_green"
                android:gravity="center"
                android:padding="3dp"
                android:text="查看详细位置"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_exit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="办公室电话："
                android:textSize="18sp" />

            <TextView
                android:layout_marginRight="3dp"
                android:id="@+id/tv_chargepersonphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="1531300881*"
                tools:ignore="HardcodedText"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"

            android:background="@drawable/shape_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_margin="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@color/colorPrimary"
                    android:layout_width="4dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="市政职责范围"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:background="@color/graybackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_citycontent"
                    android:text="1、负责管理区域的道路设施、交通设施、桥梁设施、照明设施、公共设施、排水设施、河道设施、城市环境的维护。\n
2、加入市政会员可享受市政设施的基本养护共享。\n
3、加入市政会员可以共同去创建养护技术交流。\n
4、加入市政会员可以共享市政协会的基础信息。\n
"
                    android:layout_width="match_parent"
                    android:scrollbars="vertical"
                    android:maxLines="13"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="6dp"
            android:text="加入市政会员"
            android:textSize="18sp"
            android:textColor="@color/cc_white"
            android:id="@+id/btn_contactcity"
            android:background="@drawable/btn_positive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ProgressBar
        android:indeterminateDrawable="@drawable/progress_loading"
        android:layout_centerInParent="true"
        android:id="@+id/contact_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    </RelativeLayout>

</FrameLayout>