<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/iv_send_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
         />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_sendroad_vname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_dealgrade"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_send_Vname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sendroad_vname"
            android:text="一级病害"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_send_Pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_send_Vname"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_sendroad_Pname"
            android:text="张三三"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sendroad_Pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_send_Vname"
            android:layout_marginTop="6dp"
            android:text="上报人员："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_send_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_send_Pname"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/tv_sendroad_date"
            android:text="2017年3月8日11:09"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sendroad_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_send_Pname"
            android:layout_marginTop="6dp"
            android:text="上报时间："
            android:textSize="16sp" />

    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/bt_post_send"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/selector_post_btn"
            android:text="报验"
            android:textColor="@color/cc_white"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>