<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grayground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_reporthistory_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_uncom" />

                <ImageView
                    android:id="@+id/iv_reporthistory_statu1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@mipmap/iv_uncom_nor" />

                <ImageView
                    android:id="@+id/iv_reviewhistory_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_uncom" />

                <ImageView
                    android:id="@+id/iv_reviewhistory_statu1"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:src="@mipmap/iv_uncom_nor" />



                <ImageView
                    android:id="@+id/iv_dealhistory_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_uncom" />

                <ImageView
                    android:id="@+id/iv_dealhistory_statu1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@mipmap/iv_uncom_nor" />

                <ImageView
                    android:id="@+id/iv_checkhistory_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_uncom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/reprote"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_reporthistory_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"

                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/graybackground" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/review"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_reviewhistory_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"

                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/graybackground" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/deal"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_dealhistory_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/graybackground" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/check"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_checkhistory_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/graybackground" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grayground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/process_tasknumer"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_reporthistory_tasknuber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20171123"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graybackground"/>

        <TextView
            android:text="上报图片："
            android:textSize="18sp"
            android:layout_marginLeft="4dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/predealhistory_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dealinghistory_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY" />

            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dealedhistory_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graybackground"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp">

            <TextView
                android:id="@+id/tv_report_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/process_report"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_reporthistory_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_report_name_title"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_review_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_reviewhistory_name"
                android:text="@string/process_review"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_reviewhistory_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"

                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_deal_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/process_deal"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_dealhistory_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_deal_name_title"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_check_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_checkhistory_name"
                android:text="@string/process_check"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_checkhistory_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>


</ScrollView>