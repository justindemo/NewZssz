<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cc_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/mainfragment_head_vp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/mainfragment_head_vp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_citypersonreport"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_title"
        >

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/iv_main_report"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="我要举报"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/cc_white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_contect_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_uncheck_information"
                >
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@mipmap/main_contact"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="联系市政"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/cc_text_blank"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_informaiton_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_uncheck_information"
                >
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@mipmap/main_information"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="市政通知"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/cc_text_blank"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_survey_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_uncheck_information"
                >

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@mipmap/main_survey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="举报反馈"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/cc_text_blank"
                    android:textSize="16sp" />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_assiation_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_uncheck_information"
                >

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@mipmap/main_assiation"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="市政协会"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/cc_text_blank"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_business_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_uncheck_information"
                >

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@mipmap/main_business"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="市政企业"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/cc_text_blank"
                    android:textSize="16sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_simple_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_uncheck_information"
                >

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@mipmap/main_company"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="集采企业"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/cc_text_blank"
                    android:textSize="16sp" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>