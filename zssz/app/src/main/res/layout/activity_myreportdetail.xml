<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5FFF5"
        android:padding="4dp">

        <TextView
            android:id="@+id/tv_mydetail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="6dp"
            android:text="病害明细"
            android:textColor="@color/cc_red"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_mydetail_reporter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_name"
            android:layout_marginTop="6dp"
            android:text="上报人："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_reporter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_name"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_mydetail_reporter_title"
            android:text="张谋面"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mydetail_reporter_title"
            android:layout_marginTop="6dp"
            android:text="病害名称："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_diseasename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mydetail_reporter_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_mydetail_name_title"
            android:text="一级病害"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_grade_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_name_title"
            android:layout_marginTop="6dp"
            android:text="处置等级："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_name_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_mydetail_grade_title"
            android:text="违章施工"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_dealtype_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_grade_title"
            android:layout_marginTop="6dp"
            android:text="处置类型："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_dealtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_grade_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_mydetail_dealtype_title"
            android:text="违章施工"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_mydetail_fatype_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_dealtype_title"
            android:layout_marginTop="6dp"
            android:text="设施类型："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_fatype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_dealtype_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_mydetail_fatype_title"
            android:text="步道"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_pbtype_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_fatype_title"
            android:layout_marginTop="6dp"
            android:text="病害类型："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_pbtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_fatype_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_mydetail_grade_title"
            android:text="塌陷"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_reporteplace_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_pbtype_title"
            android:layout_marginTop="6dp"
            android:text="上报地点："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_reporteplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_pbtype_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_mydetail_grade_title"
            android:text="西环路"
            android:maxLines="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_faname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_reporteplace"
            android:layout_marginTop="6dp"
            android:text="设施名称："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_faname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_reporteplace"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_mydetail_grade_title"
            android:text="彩砖"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_fasize_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_faname_title"
            android:layout_marginTop="6dp"
            android:text="设施规格："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_fasize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_faname_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_mydetail_grade_title"
            android:text="250*250*60"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_reportetime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_fasize_title"
            android:layout_marginTop="6dp"
            android:text="上报时间："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_reportetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_fasize_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_mydetail_grade_title"
            android:text="2017年3月2日16:45:06"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_mydetail_reporteiamg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_reportetime"
            android:layout_marginTop="6dp"
            android:text="上报图片："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ll_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mydetail_reporteiamg_title"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_detail_photo1"
                android:layout_width="100dp"
                android:layout_height="120dp" />

            <ImageView
                android:id="@+id/iv_detail_photo2"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:id="@+id/iv_detail_photo3"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="8dp" />

        </LinearLayout>


    </RelativeLayout>
</ScrollView>