<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/mainfragment_head_vp"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </LinearLayout>


        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_alignBottom="@+id/mainfragment_head_vp"
            >

            <LinearLayout
                android:id="@+id/ll_point"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:text="市政集采平台"
        android:textSize="18sp"
        android:paddingTop="6dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:background="@color/cc_dark_fade"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mainfragment_head_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/graybackground"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>


    <LinearLayout
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_citypersonreport"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_height="wrap_content" />
            <TextView
                android:text="我要举报"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="@color/cc_dark_fade"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll_mayorphone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:src="@mipmap/ic_launcher"
                android:layout_height="wrap_content" />
            <TextView
                android:text="市长热线"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>