<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graybackground">

    <LinearLayout
        android:focusableInTouchMode="false"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/information_name"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="18sp"
            android:id="@+id/my_name"
            android:hint="@string/hint_name"
            android:padding="10dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/information_phone"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:textSize="18sp"
            android:id="@+id/my_telephone"
            android:padding="10dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_ll_activite"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/information_department"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:textSize="18sp"
            android:id="@+id/my_department"
            android:padding="10dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:id="@+id/mine_compelet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector_btn_exit"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/information_save"
        android:textColor="@color/cc_text_darklight"
        android:textSize="20sp" />



</LinearLayout>