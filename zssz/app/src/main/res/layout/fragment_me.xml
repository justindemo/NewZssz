        <!--本人头像-->
        <RelativeLayout
            android:id="@+id/rl_user_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_height"
            android:background="@color/greenbackground">

            <ImageView
                android:id="@+id/ic_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:src="@mipmap/ic_setting"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_my_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_logo"
                android:scaleType="fitXY"
                android:src="@mipmap/my_icon" />

            <TextView
                android:id="@+id/tv_my_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_my_icon"
                android:layout_centerInParent="true"
                android:paddingTop="6dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:text="我审核过的"
                android:textColor="@color/cc_text_blank"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/graybackground" />

