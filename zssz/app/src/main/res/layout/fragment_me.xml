        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:background="@drawable/clickeffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="我的资料"
                android:id="@+id/me_information"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="6dp"
                android:src="@mipmap/arrow_down" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/graybackground" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:id="@+id/me_score"
                android:text="我的积分"
                android:background="@drawable/clickeffect"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="6dp"
                android:src="@mipmap/arrow_down" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/graybackground" />


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
           >

            <TextView
                android:id="@+id/me_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="版本更新"
                android:background="@drawable/clickeffect"

                android:textSize="18sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="6dp"
                android:src="@mipmap/arrow_down" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/graybackground" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:id="@+id/me_share"
                android:background="@drawable/clickeffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="软件分享"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="6dp"
                android:src="@mipmap/arrow_down" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/graybackground" />


        <Button
            android:id="@+id/me_exit"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="6dp"
            style="@style/ButtonStyle"
            android:textColor="@color/cc_text_darklight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_exit"
            android:text="退出登录" />


        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/graybackground" />

        <!--处理病害-->

        <LinearLayout
            android:id="@+id/me_activity"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_my_reporte"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/my_first"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:singleLine="true"
                    android:text="我已上报病害的条数："
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_report_nume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_my_deal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/my_last"
                android:gravity="center_horizontal|clip_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:singleLine="true"
                    android:text="我已处置病害的条数："
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_deal_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>