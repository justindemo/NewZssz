<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处置前："
            android:layout_marginLeft="6dp"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_predeal_icon1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_predeal_icon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_predeal_icon3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/bt_uncheck_predeal"
        android:textColor="@color/white"
        android:text="上报"
        android:textSize="23sp"
        android:background="@drawable/slecetor_btn_uncheck"
        android:layout_width="match_parent"
        android:layout_margin="6dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处置中："
            android:layout_marginLeft="6dp"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dealing_icon1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_dealing_icon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_dealing_icon3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/bt_uncheck_dealing"
        android:textColor="@color/white"
        android:text="上报"
        android:textSize="23sp"
        android:background="@drawable/slecetor_btn_uncheck"
        android:layout_width="match_parent"
        android:layout_margin="6dp"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处置后："
            android:layout_marginLeft="6dp"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dealed_icon1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_dealed_icon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_dealed_icon3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />



        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/et_repair_statu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5dp"
        android:hint="维修备注："
        android:gravity="top"
        android:maxLines="3"

        android:background="@drawable/shape_camrea_ok"
        android:layout_margin="6dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_uncheck_dealed"
        android:text="报验"
        android:textColor="@color/white"
        android:background="@drawable/slecetor_btn_uncheck"
        android:textSize="23sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>