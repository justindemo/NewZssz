<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp">

    <ImageView
        android:id="@+id/iv_reporte"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/tv_my_reporter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allreporter"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_my_reporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_my_reporter_title"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_my_pbname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_my_reporter"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"

            android:text="@string/problemlocation"
            android:textSize="16sp" />


        <FrameLayout
            android:id="@+id/tv_my_pbname1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_my_reporter"
            android:layout_toRightOf="@id/tv_my_pbname_title">

            <TextView
                android:id="@+id/tv_my_problem_audio"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/selector_tv_audio"
                android:drawableRight="@mipmap/play"
                android:gravity="center"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_my_pbname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="位置描述位置描述位置描述位置描述位置描述位置描述位置描述位置描述位置描述"
                android:textSize="16sp" />

        </FrameLayout>


        <TextView
            android:id="@+id/tv_my_report_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_pbname1"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:text="@string/reportertime"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_my_report_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_pbname1"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_my_pbname_title"
            android:text="2017-05-31 09:29:54"
            android:textSize="16sp" />


    </RelativeLayout>
</LinearLayout>