<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_history_reporte"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_my_reporter_title"
            android:text="@string/allreporter"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_history_reporter"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tv_my_reporter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@id/tv_history_reporter"
            android:id="@+id/tv_my_pbname_title"
            android:text="@string/personreporte_faci"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="6dp"
            android:text="金星路金星路金星路金星路金星路金星路金星路金星路金星路金星路"
            android:id="@+id/tv_history_faci"
            android:layout_below="@id/tv_history_reporter"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tv_my_pbname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tv_history_faci"
            android:id="@+id/tv_my_report_time_title"
            android:text="@string/reportertime"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="6dp"
            android:text="2017-05-31 09:29:54"
            android:id="@+id/tv_history_report_time"
            android:layout_below="@+id/tv_history_faci"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tv_my_pbname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    </LinearLayout>
    <View
        android:background="@color/graybackground"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
</LinearLayout>